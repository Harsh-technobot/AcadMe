<% layout("/layout/boilerplate") -%>
<% block("head").append("<link rel='stylesheet' href='/css/sign_In_Up.css'>") %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

<div class="auth-container">
  <div class="img-store">
    <img src="/images/books.png" alt="Sign In">
  </div>
  <div class="content">
    <a href="/auth/login"><i class="bi-arrow-left"></i></a>
    <h1 class="signUpH">Sign Up</h1>
    <form action="/auth/register" method="POST">
      <input type="text" placeholder="Username" class="details" name="username" required>
      <br>
      <input type="text" placeholder="Email Address" class="details" name="email" required>
      <br>
      <input type="password" placeholder="Create Password" class="details" name="password" required>
      <br>
      <input type="password" placeholder="Confirm Password" class="details" name="cpassword" required>
      <br>
      <div class="fois">
        <h4>Fields of Interest</h4>
        <div>
          <input type="checkbox" name="foi[]" value="Computer Science">
          <label>&nbspComputer Science</label>
        </div>
        <div>
          <input type="checkbox" name="foi[]" value="Mechanics">
          <label>&nbspMechanics</label>
        </div>
        <div>
          <input type="checkbox" name="foi[]" value="Mathematics">
          <label>&nbspMathematics</label>
        </div>
        <div>
          <input type="checkbox" name="foi[]" value="Literature">
          <label>&nbspLiterature</label>
        </div>
      </div>
      <button type="submit" class="signUpbtn">Continue</button>
    </form>
  </div>
</div>